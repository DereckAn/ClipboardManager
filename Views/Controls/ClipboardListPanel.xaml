<?xml version="1.0" encoding="utf-8"?>
<UserControl
      x:Class="Clipboard.Views.Controls.ClipboardListPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Clipboard.Views.Controls"
      xmlns:viewmodels="using:Clipboard.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo - Lista -->
        <Border Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderThickness="0,0,1,0">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Lista -->
                    <RowDefinition Height="Auto"/>
                    <!-- Contador -->
                </Grid.RowDefinitions>

                <!-- Lista de elementos -->
                <ListView Grid.Row="0" 
                            ItemsSource="{x:Bind ItemsSource, Mode=OneWay}" 
                            SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
                            SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ClipboardItemViewModel">
                            <Border Background="{ThemeResource SubtleFillColorTransparentBrush}" 
                                     CornerRadius="8" Padding="12" Margin="0,0,0,8"
                                     BorderBrush="{ThemeResource AccentButtonBackgroundPressed}"
                                     BorderThickness="0">
                                <Border.Resources>
                                    <Storyboard x:Name="HoverStoryboard">
                                        <ColorAnimation Storyboard.TargetName="HoverBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{ThemeResource SystemAccentColorLight3}" 
                                                        Duration="0:0:0.2"/>
                                    </Storyboard>
                                </Border.Resources>

                                <Border x:Name="HoverBorder" Background="Transparent" CornerRadius="8">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                        Text="{x:Bind FormattedDate}" 
                                                        FontSize="12" 
                                                        Opacity="0.7"/>

                                            <TextBlock Grid.Column="1" 
                                                        Text="{x:Bind FavoriteIconForList, Mode=OneWay}" 
                                                        FontSize="12"
                                                        Opacity="0.7"/>
                                        </Grid>

                                        <TextBlock Text="{x:Bind DisplayContent}" 
                                                    FontSize="14" 
                                                    Margin="0,4" 
                                                    MaxLines="2" 
                                                    TextWrapping="Wrap" 
                                                    TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{x:Bind FormattedSize}" 
                                                    FontSize="11" 
                                                    Opacity="0.5"/>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Contador personalizable -->
                <TextBlock Grid.Row="1" 
                            Text="{x:Bind CounterText, Mode=OneWay}" 
                            FontSize="12" 
                            HorizontalAlignment="Center" 
                            Margin="0,16"/>
            </Grid>
        </Border>

        <!-- Panel Derecho - Detalles -->
        <Border Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid>
                <!-- Sin selecciÃ³n -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                             Visibility="{x:Bind EmptyStateVisibility, Mode=OneWay}">
                    <TextBlock Text="{x:Bind EmptyStateIcon, Mode=OneWay}" 
                                FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="{x:Bind EmptyStateText, Mode=OneWay}" 
                                FontSize="16" Opacity="0.6" HorizontalAlignment="Center" 
                                TextAlignment="Center" Margin="0,16"/>
                </StackPanel>

                <!-- Con selecciÃ³n -->
                <ScrollViewer Visibility="{x:Bind SelectedItemVisibility, Mode=OneWay}"
                               Padding="24">
                    <StackPanel Spacing="16">
                        <!-- Encabezado -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{x:Bind SelectedItem.FormattedDate, Mode=OneWay}" FontSize="14" Opacity="0.7"/>
                                <TextBlock Text="{x:Bind SelectedItem.FormattedSize, Mode=OneWay}" FontSize="12" Opacity="0.5" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <!-- BotÃ³n Favorito -->
                                <Button Command="{x:Bind ToggleFavoriteCommand, Mode=OneWay}" CommandParameter="{x:Bind SelectedItem, Mode=OneWay}" Width="40" Height="32">
                                    <TextBlock Text="{x:Bind SelectedItem.FavoriteIcon, Mode=OneWay}" FontSize="14"/>
                                </Button>
                                
                                <!-- BotÃ³n Copiar -->
                                <Button Command="{x:Bind CopyToClipboardCommand, Mode=OneWay}" CommandParameter="{x:Bind SelectedItem, Mode=OneWay}" Width="80" Height="32">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="ðŸ“‹" FontSize="12"/>
                                        <TextBlock Text="Copiar" FontSize="12"/>
                                    </StackPanel>
                                </Button>

                                <!-- BotÃ³n Eliminar -->
                                <Button Command="{x:Bind DeleteItemCommand, Mode=OneWay}" CommandParameter="{x:Bind SelectedItem, Mode=OneWay}" Width="40" Height="32">
                                    <TextBlock Text="ðŸ—‘ï¸" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Separador -->
                        <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" 
                                    Opacity="0.5"/>

                        <!-- Contenido -->
                        <Border Background="{ThemeResource LayerFillColorAltBrush}" 
                                 CornerRadius="8" 
                                 Padding="16" 
                                 MinHeight="200">
                            <ScrollViewer ZoomMode="Disabled" 
                                           HorizontalScrollMode="Auto" 
                                           VerticalScrollMode="Auto"
                                           HorizontalScrollBarVisibility="Auto"
                                           VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{x:Bind SelectedItem.Content, Mode=OneWay}"
                                            TextWrapping="Wrap" 
                                            FontFamily="Consolas" 
                                            FontSize="13" 
                                            IsTextSelectionEnabled="True"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
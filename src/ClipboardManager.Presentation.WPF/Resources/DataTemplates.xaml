<!-- src/ClipboardManager.Presentation.WPF/Resources/DataTemplates.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:ClipboardManager.Application.ViewModels;assembly=ClipboardManager.Application"
                    xmlns:views="clr-namespace:ClipboardManager.Presentation.WPF.Views"
                    xmlns:converters="clr-namespace:ClipboardManager.Presentation.WPF.Converters">

    <!-- Define el converter para Visibilidad -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <!-- Define tu converter personalizado para el icono de Pin -->
    <converters:BooleanToPinIconConverter x:Key="BooleanToPinIconConverter"/>

    <!-- Define el DataTemplate para tus items -->
    <DataTemplate DataType="{x:Type viewModels:ClipboardItemViewModel}">
        <views:ClipboardItemCard />
    </DataTemplate>
  
</ResourceDictionary>